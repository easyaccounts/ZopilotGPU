# ZopilotGPU Environment Variables
# Copy this to .env and fill in your actual values

# REQUIRED: Hugging Face Token for Mixtral 8x7B
# Get from: https://huggingface.co/settings/tokens
# Accept license: https://huggingface.co/mistralai/Mixtral-8x7B-Instruct-v0.1
HUGGING_FACE_TOKEN=your_hf_token_here

# REQUIRED: API Key for authentication
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
ZOPILOT_GPU_API_KEY=your_secure_api_key_here

# REQUIRED: Backend domain for CORS
ALLOWED_ORIGINS=http://localhost:8080

# Nanonets API Configuration (for Docstrange fallback)
# Get your FREE API key from https://app.nanonets.com/#/keys (provides 10k docs/month)
# Alternative to 'docstrange login' - both approaches give same 10k/month limit
NANONETS_API_KEY=your_nanonets_api_key_here
NANONETS_MODEL_ID=your_nanonets_model_id_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Model Configuration
TRANSFORMERS_CACHE=/app/models
HF_HOME=/app/models
TORCH_HOME=/app/models

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# RunPod Specific
RUNPOD_AI_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here