{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["entities_to_resolve", "extraction_metadata"],
  "properties": {
    "entities_to_resolve": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["entity_type", "extracted_fields", "search_criteria", "extraction_reasoning"],
        "properties": {
          "entity_type": {
            "type": "string",
            "description": "Type of entity (customer, vendor, item, account, etc.)"
          },
          "extracted_fields": {
            "type": "object",
            "description": "Fields extracted from document matching API schema",
            "additionalProperties": true
          },
          "search_criteria": {
            "type": "object",
            "required": ["primary"],
            "properties": {
              "primary": {
                "type": "string",
                "description": "Primary search term (exact text from document)"
              },
              "alternatives": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Alternative search terms (variations, abbreviations)"
              }
            }
          },
          "extraction_reasoning": {
            "type": "string",
            "description": "Brief explanation of extraction logic"
          }
        }
      }
    },
    "extraction_metadata": {
      "type": "object",
      "required": ["total_entities"],
      "properties": {
        "total_entities": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of entities extracted"
        },
        "entities_by_type": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          },
          "description": "Count of entities by type"
        }
      }
    }
  }
}
