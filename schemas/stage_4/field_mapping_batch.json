{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["actions"],
  "properties": {
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["action_index", "action_name", "api_request_body", "lookups_required", "validation"],
        "properties": {
          "action_index": {
            "type": "integer",
            "minimum": 0,
            "description": "Zero-based index of action in batch"
          },
          "action_name": {
            "type": "string",
            "description": "Action name (e.g., create_contact, create_bill)"
          },
          "api_request_body": {
            "type": "object",
            "description": "Complete API request body for this action",
            "additionalProperties": true
          },
          "lookups_required": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["entity", "field", "lookup_value"],
              "properties": {
                "entity": {
                  "type": "string"
                },
                "field": {
                  "type": "string"
                },
                "lookup_value": {
                  "type": "string"
                },
                "create_if_missing": {
                  "type": "boolean"
                }
              }
            }
          },
          "validation": {
            "type": "object",
            "required": ["warnings", "missing_fields"],
            "properties": {
              "warnings": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "missing_fields": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
