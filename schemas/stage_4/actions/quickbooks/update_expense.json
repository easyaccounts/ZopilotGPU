    },
    "TxnDate": {
      "type": "string",
      "format": "date"
    },
    "PaymentType": {
      "type": "string",
      "enum": [
        "Cash",
        "Check",
        "CreditCard"
      ],
      "description": "Payment type (required)"
    },
    "AccountRef": {
